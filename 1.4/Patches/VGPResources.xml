<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Fix labels in smelting recipes so they sort better in the menu -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>VGP Garden Resources</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- Fix label in steel recipes -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractRawSteelLeaf"]/label</xpath>
                    <value>
                        <label>smelt steel shrooms</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractBulkSteelLeaf"]/label</xpath>
                    <value>
                        <label>smelt steel shrooms x4</label>
                    </value>
                </li>

                <!-- Fix label in plasteel recipes -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractRawPlasteelLeaf"]/label</xpath>
                    <value>
                        <label>smelt plasteel bulb chunks</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractBulkPlasteelLeaf"]/label</xpath>
                    <value>
                        <label>smelt plasteel bulb chunks x4</label>
                    </value>
                </li>

                <!-- Fix label in gold recipes -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractRawGoldLeaf"]/label</xpath>
                    <value>
                        <label>smelt gold fern leaves</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractbulkGoldLeaf"]/label</xpath>
                    <value>
                        <label>smelt gold fern leaves x4</label>
                    </value>
                </li>

                <!-- Fix label in jade recipes -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractRawJadeLeaf"]/label</xpath>
                    <value>
                        <label>extract jade crystals</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractBulkRawJadeLeaf"]/label</xpath>
                    <value>
                        <label>extract jade crystals x4</label>
                    </value>
                </li>

                <!-- Fix label in silver recipes -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractRawSilverLeaf"]/label</xpath>
                    <value>
                        <label>smelt silver flower petals</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractBulkSilverLeaf"]/label</xpath>
                    <value>
                        <label>smelt silver flower petals x4</label>
                    </value>
                </li>

                <!-- Fix label in uranium recipes -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractRawUraniumLeaf"]/label</xpath>
                    <value>
                        <label>smelt uranium root bulbs</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef[defName="ExtractBulkUraniumLeaf"]/label</xpath>
                    <value>
                        <label>smelt uranium root bulbs x4</label>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>